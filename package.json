{
  "name": "nuber",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "pretypes": "gql-merge --out-file ./src/schema.graphql ./src/api/**/*.graphql",
    "types": "graphql-to-typescript ./src/schema.graphql ./src/types/graph.d.d.ts",
    "dev:types": "npm run types",
    "dev:server": "cd src && nodemon --exec ts-node index.ts -e ts,graphql",
    "dev:client": "npm start --prefix client",
    "dev": "concurrently npm:dev:*",
    "tsc": "tsc",
    "prebuild": "rm -rf dist",
    "postinstall": "npm run tsc",
    "build:server": "tsc",
    "build": "concurrently npm:build:*",
    "build:client": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "postbuild": "cp ./src/api/**/**/*.graphql ./dist/api/ && mkdir ./dist/client && cp -av ./client/build ./dist/client/",
    "start:server": "node ./dist/index.js",
    "start": "concurrently npm:start:*"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "./scripts/add_issue_number_into_commit.sh $HUSKY_GIT_PARAMS"
    }
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/helmet": "0.0.45",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/morgan": "^1.7.37",
    "@types/node": "^13.1.1",
    "@types/nodemailer": "^6.4.0",
    "@types/twilio": "^2.11.0",
    "babel-runtime": "^6.26.0",
    "gql-merge": "0.0.6",
    "graphql-to-typescript": "^0.1.2",
    "husky": "^3.1.0",
    "nodemon": "^2.0.2",
    "ts-node": "^8.5.4",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.4"
  },
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "axios": "^0.19.1",
    "bcrypt": "^3.0.7",
    "class-validator": "^0.11.0",
    "concurrently": "^5.0.2",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql-tools": "^4.0.6",
    "graphql-yoga": "^1.18.3",
    "helmet": "^3.21.2",
    "jsonwebtoken": "^8.5.1",
    "merge-graphql-schemas": "^1.7.4",
    "morgan": "^1.9.1",
    "nodemailer": "^6.4.2",
    "pg": "^7.16.0",
    "twilio": "^3.39.1",
    "typeorm": "^0.2.22"
  }
}
